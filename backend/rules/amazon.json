{
  "retailer": "amazon",
  "name": "Amazon Advertising Guidelines",
  "version": "2024.1",
  "rules": {
    "logo": {
      "min_width": 100,
      "min_height": 40,
      "max_width_percent": 0.25,
      "safe_zone_margin": 20,
      "allowed_positions": ["top-left", "top-right", "bottom-left", "bottom-right"],
      "required": true
    },
    "text": {
      "headline_min_font_size": 24,
      "body_min_font_size": 16,
      "max_coverage_percent": 30,
      "min_contrast_ratio": 4.5,
      "allowed_fonts": ["Arial", "Helvetica", "Sans-serif"],
      "max_lines": 3
    },
    "layout": {
      "safe_margin_px": 30,
      "min_product_size_percent": 40,
      "max_elements": 10,
      "required_whitespace_percent": 15
    },
    "colors": {
      "min_contrast": 4.5,
      "max_colors": 5,
      "prohibited_backgrounds": ["#FFFFFF"]
    },
    "image": {
      "min_resolution": [800, 600],
      "max_file_size_mb": 5,
      "allowed_formats": ["PNG", "JPEG"],
      "dpi": 72
    }
  }
}

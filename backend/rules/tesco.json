{
  "platform": "Tesco",
  "version": "1.0",
  "description": "Tesco Advertising Guidelines and Compliance Rules",
  
  "elementRules": {
    "lowEverydayPrice": {
      "required": false,
      "design": {
        "background": "#FFFFFF",
        "fontFamily": "Tesco",
        "fontColor": "#0050AA",
        "alignment": "left",
        "valueTile": "white",
        "brandingRestriction": "Logo only - no other branded content",
        "lepLogoPosition": "right of packshot"
      },
      "mandatoryTag": "Selected stores. While stocks last"
    },
    
    "tags": {
      "required": true,
      "allowedTags": [
        "Only at Tesco",
        "Available at Tesco",
        "Selected stores. While stocks last"
      ],
      "clubcardTags": [
        "Available in selected stores. Clubcard/app required. Ends DD/MM"
      ],
      "socialSafeZone": {
        "format": "9:16",
        "topMargin": 200,
        "bottomMargin": 250,
        "description": "Leave 200px from top and 250px from bottom free from text and logos"
      }
    },
    
    "valueTiles": {
      "required": false,
      "types": {
        "new": {
          "editable": false,
          "predefined": true,
          "text": "NEW"
        },
        "white": {
          "editable": true,
          "editableFields": ["price"],
          "predefined": true
        },
        "clubcard": {
          "editable": true,
          "editableFields": ["offerPrice", "regularPrice"],
          "predefined": true,
          "design": "flat",
          "requiresEndDate": true,
          "dateFormat": "DD/MM",
          "priceFormats": [
            "£X.XX Clubcard Price",
            "£X.XX with Clubcard",
            "Save £X.XX with Clubcard"
          ]
        }
      },
      "positioning": {
        "fixed": true,
        "userMovable": false,
        "noOverlap": true
      }
    },
    
    "cta": {
      "required": false,
      "allowed": false,
      "note": "No CTA allowed on Tesco banners"
    },
    
    "logo": {
      "required": false,
      "allowUpload": true,
      "allowBrandSpace": true,
      "showOnAllBanners": true
    },
    
    "headline": {
      "required": true,
      "showOnAllBanners": true
    },
    
    "subhead": {
      "required": true,
      "showOnAllBanners": true
    },
    
    "caveat": {
      "required": false,
      "allowedTypes": ["drinkaware"],
      "alcohol": {
        "mandatory": true,
        "showOnAllSizes": true
      }
    },
    
    "packshot": {
      "required": true,
      "maximum": 3,
      "leadProductRequired": true
    },
    
    "background": {
      "colorAllowed": true,
      "imageAllowed": true,
      "maxImages": 1
    }
  },
  
  "validationRules": [
    {
      "ruleId": "TESCO-ALC-001",
      "category": "Alcohol",
      "name": "Drinkaware Logo",
      "severity": "hard_fail",
      "description": "All alcohol campaigns must include the Drinkaware lock-up",
      "conditions": {
        "productCategory": "alcohol"
      },
      "requirements": {
        "drinkaware": {
          "required": true,
          "minHeight": 20,
          "minHeightSAYS": 12,
          "allowedColors": ["black", "white"],
          "contrastRequired": true
        }
      },
      "source": "Tesco guideline"
    },
    
    {
      "ruleId": "TESCO-COPY-001",
      "category": "Copy",
      "name": "No T&Cs",
      "severity": "hard_fail",
      "description": "No T&Cs allowed. Detect any kind of claim.",
      "forbiddenPatterns": [
        "terms and conditions",
        "t&c",
        "t&cs",
        "terms apply",
        "conditions apply",
        "*"
      ],
      "source": "Self-serve guidelines",
      "reason": "Cannot police claims for self-serve media"
    },
    
    {
      "ruleId": "TESCO-COPY-002",
      "category": "Copy",
      "name": "No Competitions",
      "severity": "hard_fail",
      "description": "Competition copy not allowed",
      "forbiddenPatterns": [
        "competition",
        "win",
        "prize",
        "enter to win",
        "giveaway",
        "contest"
      ],
      "source": "Self-serve guidelines",
      "reason": "No mechanism for verifying claims"
    },
    
    {
      "ruleId": "TESCO-COPY-003",
      "category": "Copy",
      "name": "No Sustainability Claims",
      "severity": "hard_fail",
      "description": "Detect any 'green' claim. Not allowed.",
      "forbiddenPatterns": [
        "eco-friendly",
        "sustainable",
        "carbon neutral",
        "green",
        "environmentally friendly",
        "carbon footprint",
        "eco",
        "planet-friendly",
        "climate"
      ],
      "source": "Self-serve guidelines"
    },
    
    {
      "ruleId": "TESCO-COPY-004",
      "category": "Copy",
      "name": "No Charity Partnerships",
      "severity": "hard_fail",
      "description": "Charity partnership text not allowed",
      "forbiddenPatterns": [
        "charity",
        "donation",
        "proceeds go to",
        "supporting",
        "fundraising"
      ],
      "source": "Self-serve guidelines"
    },
    
    {
      "ruleId": "TESCO-COPY-005",
      "category": "Copy",
      "name": "No Price Call-outs in Copy",
      "severity": "hard_fail",
      "description": "No copy element can refer to prices, discounts or deals",
      "forbiddenPatterns": [
        "£",
        "$",
        "€",
        "off",
        "% off",
        "discount",
        "save",
        "deal",
        "offer",
        "sale",
        "price",
        "was £",
        "now £"
      ],
      "source": "Tesco guidelines",
      "note": "Prices must only appear in Value Tiles"
    },
    
    {
      "ruleId": "TESCO-COPY-006",
      "category": "Copy",
      "name": "No Money-back Guarantees",
      "severity": "hard_fail",
      "description": "Money-back copy not allowed",
      "forbiddenPatterns": [
        "money back",
        "money-back",
        "refund",
        "guarantee",
        "guaranteed"
      ],
      "source": "Tesco guidelines"
    },
    
    {
      "ruleId": "TESCO-COPY-007",
      "category": "Copy",
      "name": "No Claims",
      "severity": "hard_fail",
      "description": "Detect claims in headline or subhead (asterisk, survey, etc.)",
      "forbiddenPatterns": [
        "*",
        "survey says",
        "proven",
        "clinical",
        "scientific",
        "tested",
        "award-winning",
        "best",
        "number 1",
        "#1"
      ],
      "source": "Self-serve guidelines"
    },
    
    {
      "ruleId": "TESCO-COPY-008",
      "category": "Copy",
      "name": "Tesco Tags Validation",
      "severity": "hard_fail",
      "description": "Only approved Tesco tag text is acceptable",
      "allowedText": [
        "Only at Tesco",
        "Available at Tesco",
        "Selected stores. While stocks last",
        "Available in selected stores. Clubcard/app required. Ends DD/MM"
      ],
      "source": "Tesco guidelines"
    },
    
    {
      "ruleId": "TESCO-DESIGN-001",
      "category": "Design",
      "name": "Value Tile Validation",
      "severity": "hard_fail",
      "description": "Validate Value Tile size, position, font, and overlay detection",
      "checks": [
        "Correct size and position",
        "Correct font size",
        "No content overlaying value tile",
        "Detect old or invalid value tiles"
      ],
      "source": "Tesco guidelines"
    },
    
    {
      "ruleId": "TESCO-DESIGN-002",
      "category": "Design",
      "name": "CTA Validation",
      "severity": "hard_fail",
      "description": "CTA must be correct size and position with no overlay",
      "checks": [
        "Correct size",
        "Correct position",
        "No content overlaying CTA"
      ],
      "source": "Tesco guidelines"
    },
    
    {
      "ruleId": "TESCO-DESIGN-003",
      "category": "Design",
      "name": "Tesco Tags Position",
      "severity": "hard_fail",
      "description": "Tags must be correct size and position with no overlay",
      "checks": [
        "Correct size",
        "Correct position",
        "No content overlaying tag"
      ],
      "source": "Tesco guidelines"
    },
    
    {
      "ruleId": "TESCO-FORMAT-001",
      "category": "Format",
      "name": "Social Safe Zone",
      "severity": "hard_fail",
      "description": "200px from top and 250px from bottom must be free",
      "conditions": {
        "formats": ["1080x1920", "9:16"],
        "platforms": ["Facebook Stories", "Instagram Stories"]
      },
      "requirements": {
        "topMargin": 200,
        "bottomMargin": 250,
        "freeFrom": ["text", "logos", "value tiles"]
      },
      "source": "Tesco guidelines"
    },
    
    {
      "ruleId": "TESCO-MEDIA-001",
      "category": "Media",
      "name": "Photography of People",
      "severity": "warning",
      "description": "Detect inclusion of people in images - requires confirmation",
      "action": "prompt_confirmation",
      "confirmationMessage": "Confirm that person/people are integral to the campaign",
      "source": "Tesco guidelines"
    },
    
    {
      "ruleId": "TESCO-ACCESS-001",
      "category": "Accessibility",
      "name": "Minimum Font Size",
      "severity": "hard_fail",
      "description": "Minimum font size requirements by format",
      "requirements": {
        "brand": 20,
        "checkoutDoubleDensity": 20,
        "social": 20,
        "checkoutSingleDensity": 10,
        "SAYS": 12
      },
      "source": "Tesco guidelines"
    },
    
    {
      "ruleId": "TESCO-ACCESS-002",
      "category": "Accessibility",
      "name": "Contrast Ratio",
      "severity": "hard_fail",
      "description": "Check against WCAG AA standard for text and CTA",
      "standard": "WCAG AA",
      "minimumRatio": {
        "normalText": 4.5,
        "largeText": 3.0
      },
      "source": "Tesco guidelines"
    },
    
    {
      "ruleId": "TESCO-PACK-001",
      "category": "Packshot",
      "name": "Packshot Positioning",
      "severity": "hard_fail",
      "description": "Packshot must be closest element to CTA on onsite brand and checkout",
      "conditions": {
        "formats": ["onsite brand", "checkout"]
      },
      "source": "Tesco guidelines"
    },
    
    {
      "ruleId": "TESCO-PACK-002",
      "category": "Packshot",
      "name": "Packshot Safe Zone",
      "severity": "hard_fail",
      "description": "Minimum gap between packshot and CTA",
      "requirements": {
        "onsiteBrand": 24,
        "checkoutDoubleDensity": 24,
        "checkoutSingleDensity": 12
      },
      "unit": "px",
      "source": "Tesco guidelines"
    }
  ],
  
  "templates": {
    "lowEverydayPrice": {
      "name": "Low Everyday Price",
      "description": "Trade-style design with Tesco branding",
      "defaults": {
        "background": "#FFFFFF",
        "fontColor": "#0050AA",
        "alignment": "left",
        "valueTile": "white",
        "tag": "Selected stores. While stocks last"
      }
    }
  },
  
  "brandColors": {
    "tescoBlue": "#0050AA",
    "tescoRed": "#EE1C2E",
    "white": "#FFFFFF",
    "black": "#000000"
  }
}
